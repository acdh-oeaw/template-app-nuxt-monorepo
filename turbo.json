{
	"$schema": "https://turbo.build/schema.json",
	"tasks": {
		"build": {
			"dependsOn": ["^build"],
			"env": ["NUXT_PUBLIC_*", "PORT"],
			"inputs": ["$TURBO_DEFAULT$", ".env*"],
			"outputs": [".nuxt/**", ".output/**", "dist/**"]
		},
		"dev": {
			"cache": false,
			"dependsOn": ["@acdh-oeaw/app-server#build"],
			"persistent": true
		},
		"//#format:check": {
			"outputs": [".prettiercache"]
		},
		"//#format:fix": {
			"outputs": [".prettiercache"]
		},
		"lint:check": {
			"dependsOn": ["^lint:check"],
			"outputs": [".eslintcache", ".stylelintcache"]
		},
		"lint:fix": {
			"dependsOn": ["^lint:fix"],
			"outputs": [".eslintcache", ".stylelintcache"]
		},
		"types:check": {
			"dependsOn": ["^types:check"],
			"outputs": ["*.tsbuildinfo"]
		},
		"test:e2e": {
			"dependsOn": ["build"]
		}
	}
}
